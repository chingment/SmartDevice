<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_180"
    android:background="@drawable/booker_borrow_card_info_bg"
    android:baselineAligned="false"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_16"
    android:paddingTop="@dimen/size_10"
    android:paddingEnd="@dimen/size_16"
    android:paddingBottom="@dimen/size_10"
    android:scaleType="matrix">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5">

        <TextView
            android:layout_width="@dimen/size_70"
            android:layout_height="wrap_content"
            android:text="@string/t_borrower"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_FullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5">

        <TextView
            android:layout_width="@dimen/size_70"
            android:layout_height="wrap_content"
            android:text="@string/t_borrowcardno"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_CardNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/size_70"
                android:layout_height="wrap_content"
                android:text="@string/t_canborrow_quantity"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_CanBorrowQuantity"
                android:layout_width="@dimen/size_40"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_WilldueQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="@dimen/size_70"
                android:layout_height="wrap_content"
                android:text="@string/t_willdue_quantity"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_WilldueQuantity"
                android:layout_width="@dimen/size_40"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/size_70"
                android:layout_height="wrap_content"
                android:text="@string/t_borrowed_quantity"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_BorrowedQuantity"
                android:layout_width="@dimen/size_40"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_SawBorrowBooks"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginStart="@dimen/size_5"
                android:background="@null"
                android:contentDescription="@string/empty"
                android:scaleType="fitXY"
                android:src="@drawable/ic_booker_saw_renew" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_OverdueQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="@dimen/size_70"
                android:layout_height="wrap_content"
                android:text="@string/t_overdue_quantity"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_OverdueQuantity"
                android:layout_width="@dimen/size_40"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/size_70"
                android:layout_height="wrap_content"
                android:text="@string/t_status"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_Status"
                android:layout_width="@dimen/size_40"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_OverdueFine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="@dimen/size_70"
                android:layout_height="wrap_content"
                android:text="@string/t_overdue_fine"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_OverdueFine"
                android:layout_width="@dimen/size_40"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
