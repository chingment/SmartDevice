<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/size_300"
        android:padding="@dimen/size_10"
        android:layout_height="@dimen/size_300"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">



        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_TipsLoading"
            android:layout_width="@dimen/size_200"
            android:layout_height="@dimen/size_200"
            android:scaleType="fitXY"
            android:padding="0dp"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_TipsImage"
            android:layout_width="@dimen/size_200"
            android:layout_height="@dimen/size_200"
            android:src="@drawable/ic_booker_book"/>




        <TextView
            android:id="@+id/tv_TipsText"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_margin="@dimen/size_3"
            android:layout_width="wrap_content"
            android:text="正在初始化设备"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>