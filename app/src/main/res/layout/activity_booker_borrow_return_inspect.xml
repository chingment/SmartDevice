<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/booker_primary_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_Header"
        layout="@layout/booker_nav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_Bodyer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_Footer"
        android:layout_below="@+id/rl_Header"
        android:paddingStart="@dimen/size_20"
        android:paddingEnd="@dimen/size_20"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:background="@drawable/booker_borrow_return_inspect_borrower_info_bg"
            android:baselineAligned="false"
            android:gravity="center|top"
            android:padding="@dimen/size_20"
            android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/size_2"
                        android:paddingBottom="@dimen/size_2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/t_contactus"
                            android:textColor="@color/field_name"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/field_value"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/size_2"
                        android:paddingBottom="@dimen/size_2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/t_feedback"
                            android:textColor="@color/field_name"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/field_value"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/size_2"
                        android:paddingBottom="@dimen/size_2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/t_contactaddr"
                            android:textColor="@color/field_name"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/field_value"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <include
        android:id="@+id/rl_Footer"
        layout="@layout/booker_nav_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>