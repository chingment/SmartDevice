<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_nav_header" />

    <RelativeLayout
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ly_Header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ListView
                android:id="@+id/lv_Cabinets"
                android:layout_width="@dimen/size_60"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:divider="@null"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none" />
        <LinearLayout
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:paddingLeft="@dimen/size_4"
            android:paddingRight="@dimen/size_4"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingTop="@dimen/size_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aty_smlockerbox_tv_txt_cur_cabinet"
                            android:textColor="@color/field_name"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_CabinetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:gravity="left"
                            android:textColor="@color/field_value"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:layout_gravity="right"
                        >



                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_order_btn_details"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_24"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingRight="@dimen/size_10"
                    android:gravity="center"
                    android:text="全部打开"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black"
                    android:background="@drawable/widget_btn_1"
                    />


            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/size_12"
                    android:layout_height="@dimen/size_12"
                    android:gravity="center"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black"
                    android:background="@drawable/locker_box_status_doc_1"
                    android:layout_marginRight="@dimen/size_5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_24"
                    android:gravity="center"
                    android:text="@string/locker_box_status_1"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/locker_box_status_1"
                    android:layout_marginRight="@dimen/size_5"
                    />

                <TextView
                    android:layout_width="@dimen/size_12"
                    android:layout_height="@dimen/size_12"
                    android:gravity="center"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black"
                    android:background="@drawable/locker_box_status_doc_2"
                    android:layout_marginRight="@dimen/size_5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_24"
                    android:gravity="center"
                    android:text="@string/locker_box_status_2"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/locker_box_status_2"
                    android:layout_marginRight="@dimen/size_5"
                    />

                <TextView
                    android:layout_width="@dimen/size_12"
                    android:layout_height="@dimen/size_12"
                    android:gravity="center"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black"
                    android:background="@drawable/locker_box_status_doc_3"
                    android:layout_marginRight="@dimen/size_5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_24"
                    android:gravity="center"
                    android:text="@string/locker_box_status_3"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/locker_box_status_3"
                    android:layout_marginRight="@dimen/size_5"
                    />


            </LinearLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:scrollbars="vertical">
                <TableLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tl_Boxs"/>
            </ScrollView>



        </LinearLayout>




        </LinearLayout>
    </RelativeLayout>

</LinearLayout>