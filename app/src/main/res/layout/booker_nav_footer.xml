<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/booker_nav_footer_border_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_66"
        android:gravity="start"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/btn_Nav_Footer_GoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/booker_btn_round_primary"
                android:baselineAligned="false"
                android:gravity="center_vertical|center_horizontal"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_10"
                android:paddingEnd="@dimen/size_20"
                android:paddingBottom="@dimen/size_10">


                <ImageView
                    android:layout_width="@dimen/size_14"
                    android:layout_height="@dimen/size_18"
                    android:background="@null"
                    android:contentDescription="@string/empty"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_nav_goback_white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:gravity="center"
                    android:text="@string/t_goback"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/btn_Nav_Footer_GoHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/booker_btn_round_primary"
                android:baselineAligned="false"
                android:gravity="center_vertical|center_horizontal"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_10"
                android:paddingEnd="@dimen/size_20"
                android:paddingBottom="@dimen/size_10">


                <ImageView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:background="@null"
                    android:contentDescription="@string/empty"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_nav_gohome_white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:gravity="center"
                    android:text="@string/t_gohome"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>