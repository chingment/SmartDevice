<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/booker_primary_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_Header"
        layout="@layout/booker_nav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/rl_Bodyer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_Footer"
        android:layout_below="@+id/rl_Header"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_20"
        android:paddingEnd="@dimen/size_20">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_180"
            android:background="@drawable/booker_borrow_card_info_bg"
            android:scaleType="matrix"
            android:baselineAligned="false"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="@dimen/size_16"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_5"
                android:paddingBottom="@dimen/size_5">

                <TextView
                    android:layout_width="@dimen/size_70"
                    android:layout_height="wrap_content"
                    android:text="@string/t_borrower"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_5"
                android:paddingBottom="@dimen/size_5">

                <TextView
                    android:layout_width="@dimen/size_70"
                    android:layout_height="wrap_content"
                    android:text="@string/t_borrowcardno"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_CardNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_5"
                android:paddingBottom="@dimen/size_5"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/size_70"
                        android:layout_height="wrap_content"
                        android:text="@string/t_canborrow_quantity"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_CanBorrowQuantity"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_WilldueQuantity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/size_70"
                        android:layout_height="wrap_content"
                        android:text="@string/t_willdue_quantity"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_WilldueQuantity"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_5"
                android:paddingBottom="@dimen/size_5"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/size_70"
                        android:layout_height="wrap_content"
                        android:text="@string/t_borrowed_quantity"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_BorrowedQuantity"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_OverdueQuantity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/size_70"
                        android:layout_height="wrap_content"
                        android:text="@string/t_overdue_quantity"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_OverdueQuantity"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_5"
                android:paddingBottom="@dimen/size_5"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/size_70"
                        android:layout_height="wrap_content"
                        android:text="@string/t_status"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_Status"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_OverdueFine"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/size_70"
                        android:layout_height="wrap_content"
                        android:text="@string/t_overdue_fine"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_OverdueFine"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>



        <com.lumos.smartdevice.ui.refreshview.SuperRefreshLayout
            android:id="@+id/sf_BorrowedBooks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_BorrowedBooks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.lumos.smartdevice.ui.refreshview.SuperRefreshLayout>



    </LinearLayout>


    <include
        android:id="@+id/rl_Footer"
        layout="@layout/booker_nav_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>