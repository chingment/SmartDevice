<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="false">

    <!-- 填充的颜色 -->
    <solid android:color="@color/booker_primary" />
    <!--设置渐变-->
    <gradient android:startColor="@color/booker_primary_dark"
        android:endColor="@color/booker_primary"
        android:angle="180"/>
    <!--angle控制渐变的方向-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="26dp" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="@dimen/size_8"
        android:top="@dimen/size_8"
        android:right="@dimen/size_8"
        android:bottom="@dimen/size_8"
        />

</shape>